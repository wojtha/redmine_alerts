<h1>Listing alerts</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Model</th>
    <th>Field</th>
    <th>Delta</th>
    <th>Author</th>
    <th>Projects</th>
    <th>Updated on</th>
  </tr>

<% @alerts.each do |alert| %>
  <tr>
    <td><%=h alert.category.name %></td>
    <td><%=h alert.model %></td>
    <td><%=h alert.field %></td>
    <td><%=h alert.delta %></td>
    <td><%=h alert.author %></td>
    <td>
      <%= render :partial => 'projects', :locals => {:alert => alert } %>
    </td>
    <td><%= format_date(alert.updated_on) %></td>
    <td><%= link_to 'Show', alert %></td>
    <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
    <td><%= link_to 'Delete', alert, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New alert', :action => 'new' %>