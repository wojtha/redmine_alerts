<h1>Editing alert</h1>

<% form_for(@alert) do |f| %>
  <%= f.error_messages %>

  <p><b><%= :author %></b><br />
    <%= @alert.author.name %>
  </p>
  <p>
    <%= f.label :category_id %><br />
    <%= f.select :category_id, collection_alert_categories_select %>
  </p>
  <p>
    <%= f.label :model %><br />
    <%= f.select :model, collection_models_select %>
  </p>
  <p>
    <%= f.label :field %><br />
    <%= f.select :field, collection_fields_select %>
  </p>
  <p>
    <%= f.label :delta %><br />
    <%= f.text_field :delta %>
  </p>
  <p>
    <%= f.label :all_projects %><br />
    <%= f.check_box :all_projects %>
  </p>
  <p>
  <label>Specific projects:</label>
  <ul>
	<% for project in User.projects  %>
  	<%= check_box_tag 'alert[project_ids][]', project.id, @alert.projects.include?(project) %><label><%= project.name  %></label>
	<% end %>
  </ul>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @alert %> |
