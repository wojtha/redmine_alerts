  <tr style="color:#<%=h report.alert.category.color %>">
    <td><%= format_date(report.created_on) %></td>
    <td><%=h report.alert.category.name %>:</td>
    <td><%= report.text %></td>
    <td><%= link_to 'Archive', {:action => :archive, :id => report.id }, :confirm => 'Are you sure?', :method => :archive %></td>
  </tr>
<% end %>
</table>
<% else %>
