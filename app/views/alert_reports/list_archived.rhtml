<h2>My Archived Reports</h2>
<p><em class="icon icon-warning">Please note, that old reports moved to the archive folder are purged regularly!</em></p>
<table class="rtable">
<% if @reports.any? %>
<% @reports.each do |report| %>
  <tr class="<%= cycle('odd', 'even') %>" style="color:#<%=h report.alert.category.color %>">
    <td><%= format_date(report.created_on) %></td>
    <td><%=h report.alert.category.name %>:</td>
    <td><%= report.text %></td>
    <td><%= link_to 'Mark as active', { :action => :unarchive, :id => report.id }, :confirm => 'Are you sure?', :method => :post, :class => 'icon icon-move' %></td>
  </tr>
<% end %>
</table>
<% else %>
<p class="nodata">No archived reports</p>
<% end %>
<div>
<%= link_to 'View all active reports', { :action => :index }, :class => 'icon icon-folder' %>
</div>

<% content_for :header_tags do %>
  <%= stylesheet_link_tag "alerts.css", :plugin => "redmine_alerts", :media => "screen" %>
<% end %>